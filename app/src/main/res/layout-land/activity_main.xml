<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerVertical"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"

        >


        <fragment
            android:id="@+id/fragmento1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:name="com.example.orientaciontorrescallejasmichael.Fragmento1"
            android:layout_weight="1"
            />

        <LinearLayout
        android:layout_width="500dp"
        android:layout_height="395dp"
        android:baselineAligned="false"
        android:divider="?android:attr/dividerHorizontal"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="10dp"
        android:showDividers="middle"

        >

         <fragment
             android:id="@+id/fragmento2"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:name="com.example.orientaciontorrescallejasmichael.Fragmento2"
             />

         <fragment
             android:id="@+id/fragmento3"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:name="com.example.orientaciontorrescallejasmichael.Fragmento3"
             />

        </LinearLayout>

     </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>